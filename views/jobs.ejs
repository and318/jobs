<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jobs</title>
    <link rel="stylesheet" href="/assets/bootstrap.css">
</head>

<body>
    <h1>Lista de trabajos</h1>
    <section class="buscador">
        <div class="container">
            <div class="flex-row ">
                <div class="d-flex justify-content-center ">
                    <div class="input-group mb-3 col-md-8">
                        <select class="custom-select" id="jobType" onchange="clean()">
                            <option selected>Selecciona Especialidad</option>
                            <option value="Javascript">Javascript</option>
                            <option value="Python">Python</option>
                            <option value="Vue">Vue</option>
                            <option value="PHP">PHP</option>
                            <option value="react">React</option>
                            <option value="ux">UX</option>
                        </select>
                        <select class="custom-select" id="place" onchange="clean()">
                            <option selected>Selecciona Ubicación</option>
                            <option value="usa">USA</USAion>
                            <option value="Germany">Alemania</option>
                            <option value="India">India</option>
                            <option value="Canada">Canada</option>
                            <option value="Netherland">Holanda</option>
                        </select>

                        <div class="input-group-append">
                            <button id="buscar" class="btn btn-outline-secondary" type="button"
                                onchange="clean()">Buscar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="resultado">
        <div class="container">
            <div class="row" >
                
           <div class="card-columns" id="lista_jobs">
        </div>
                <button type="button" class="btn btn-outline-success btn-sm" data-toggle="modal"
                    data-target="#lata">
                    Ver más
                </button>
                <div class="modal fade" id="lata" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="MdalLabel">Descripción del puesto</h5>
                                <button type="button" class="close" data-dismiss="modal"
                                    aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <small>
                                    ${job.description}
                                </small>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary"
                                    data-dismiss="modal">Cerrar</button>

                            </div>
                        </div>
                    </div>
                </div>


                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                    Launch demo modal
                </button>

                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                ...
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>


    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="/assets/bootstrap.js"></script>
    <script src="/assets/axios.js"></script>
    <script src="/actions/jobs.js"></script>
</body>

</html>